<Page
    x:Class="Mid_Project.QueryPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Mid_Project"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Button x:Name="search" HorizontalAlignment="Left" Margin="735,68,0,0" VerticalAlignment="Top" Height="57" Width="60">
            <Button.Background>
                <ImageBrush Stretch="Fill" ImageSource="Assets/search.PNG"/>
            </Button.Background>
        </Button>
        <Button x:Name="speechRecognition" HorizontalAlignment="Left" Margin="815,68,0,0" VerticalAlignment="Top" Height="57" Width="45" >
            <Button.Background>
                <ImageBrush Stretch="Fill" ImageSource="Assets/microphone.PNG"/>
            </Button.Background>
        </Button>
        <TextBox x:Name="searchInfo" HorizontalAlignment="Left" Margin="320,68,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="57" Width="395"/>

    </Grid>
</Page>
